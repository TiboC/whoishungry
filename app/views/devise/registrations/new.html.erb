<div class="row">
	<div class="jumbotron col-md-6 col-md-offset-3">
    
    <h1 class="text-center">Sign-up</h1>
    <br>
    <div class="well col-md-8 col-md-offset-2">
    
      <%= link_to "Sign up with Facebook", user_omniauth_authorize_path(:facebook) %>
      <p>No auto posting, ever.</p>
      <br>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="input-group">
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-user"></span>
        </span>
        <%= f.email_field :name, autofocus: true, :placeholder => "Name",class: "form-control" %>
      </div>
      <br>
      <div class="input-group">
        <span class="input-group-addon">@</span>
        <%= f.email_field :email, :placeholder => "E-mail",class: "form-control" %>
      </div>
      <br>

      <div class="input-group">
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-lock"></span>
        </span>
        <%= f.password_field :password, autocomplete: "off", :placeholder => "Mot de passe",class: "form-control" %>
      </div>
      <br>
    
      <div class="center"><%= f.submit "Sign Up !", class: "btn btn-large btn-primary" %></div>
      <% end %>
    </div>
  </div>
</div>

